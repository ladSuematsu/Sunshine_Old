<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ladsoft.sunshine" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="ladsoft.sunshine.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ladsoft.sunshine.activity.SettingsActivity"
            android:label="Settings"
            android:parentActivityName="ladsoft.sunshine.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ladsoft.sunshine.activity.MainActivity" />
        </activity>
        <activity android:name="ladsoft.sunshine.activity.AboutActivity"
            android:label="@string/title_activity_activity_about"
            android:parentActivityName="ladsoft.sunshine.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ladsoft.sunshine.activity.MainActivity" />

        </activity>
    </application>

</manifest>
